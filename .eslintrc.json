{
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "env": {
      "browser": true,
      "es6": true,
      "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
  },
  "rules": {
    "quotes": ["warn", "single"],
    "max-len": ["warn", {"code": 100, "tabWidth": 2, "ignoreUrls": true, "ignorePattern": "^import|^export"}]
  }
}
