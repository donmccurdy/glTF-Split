{
  "compilerOptions": {
    "baseUrl": "./packages",
    "paths": {
      "@gltf-transform/*": ["*/src"]
    },
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "target": "es6",
    "declaration": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "typings",
      "node_modules/@types"
    ]
  },
  "files": [
    "typings/gltf.d.ts",
    "typings/draco3d.d.ts"
  ],
  "include": ["packages/*/src/**/*.ts"]
}
